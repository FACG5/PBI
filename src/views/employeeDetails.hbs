{{#if err}}
<h1 class='title'>الموظف غير موجود</h1>
<hr> {{else}}
<h1 class='title'>{{obj.name}}</h1>
<hr>
<div class="box">
  <div class="bar">
    <ul id="ss">
      <li id="main" class="tabActive tablink" onclick="show(event,'#main')">تفاصيل شخصية</li>
      <li id="bouns" class="tablink" onclick="show(event,'#bouns')">علاوات</li>
      <li id="deductions" class="tablink" onclick="show(event,'#deductions')">اقتطاعات</li>
      <li id="exemption" class="tablink" onclick="show(event,'#exemption')">اعفاءات</li>
      <li id="div5" class="tablink" onclick="show(event,'#div5')">تقارير شهرية</li>
    </ul>
  </div>
  <div class="tabBody">
    <div class="singleBody first-box" id="main">
      <form class="form-update form" name="main" id="form-div1">
        <ul>
          <li class="full">
            <span>الاسم رباعي</span>
            <div>
              <input name="name" value="{{obj.name}}" type="text" id="input-field-big" class="input-field input-field-div1" readonly>
            </div>
          </li>
          <li>
            <span>رقم الهوية</span>
            <div><input value="{{obj.idNumber}}" type="text" name="idNumber" class="input-field input-field-div1" readonly></div>
          </li>
          <li>
            <span>تاريخ الميلاد</span>
            <div><input name="birthday" value="{{obj.birthday}}" type="date" class="input-field input-field-div1" readonly></div>
          </li>
          <li>
            <span>مكان السكن</span>
            <div><input name="location" value="{{obj.location}}" type="text" class="input-field input-field-div1" readonly></div>
          </li>
          <li>
            <span>الحالة الاجتماعية</span>
            <div>
              <span class="input-field-div1" readonly> {{obj.socialStatus}}</span>
              <select name="socialStatus" class='none status' disabled>
                <option value="{{obj.socialStatus}}" hidden="hidden" selected="selected">{{obj.socialStatus}}</option>
                <option value="أعزب">أعزب</option>
                <option value="متزوج">متزوج</option>
                <option value="مطلق">مطلق</option>
              </select>
            </div>
          </li>
          <li>
            <span>عدد الأبناء</span>
            <div><input value="{{obj.children}}" type="number" name="children" class="input-field input-field-div1" readonly></div>
          </li>
          <li>
            <span>الجنسية</span>
            <div><input value="{{obj.nationality}}" type="text" name="nationality" class="input-field input-field-div1" readonly></div>
          </li>
          <li>
            <span>الوظيفة</span>
            <div><input value="{{obj.jobTitle}}" type="text" name="jobTitle" class="input-field input-field-div1" readonly></div>
          </li>
          <li>
            <span>الفئة</span>
            <div>
              <span class="input-field-div1">{{obj.category}} </span>
              <select name='category' class='none status' disabled>
                <option value="{{obj.category}}" hidden="hidden" selected="selected">{{obj.category}}</option>
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
                <option value="E">E</option>
              </select>
            </div>
          </li>
        </ul>
        <ul>
          <li>
            <span>الدرجة</span>
            <div>
              <span class="input-field-div1">{{obj.class}} </span>
              <select name="class" class='none status' disabled>
                <option selected="selected" value="{{obj.class}}" hidden="hidden">{{obj.class}}</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
              </select>
            </div>
          </li>
          <li>
            <span>عمل الزوجة</span>
            <div>
              <span class="input-field-div1">{{#if obj.wife}}تعمل{{else}}لاتعمل{{/if}}</span>
              <select name='wife' class='none status' disabled>
                <option value="{{obj.wife}}" hidden="hidden" selected="selected">{{#if obj.wife}}تعمل{{else}}لاتعمل{{/if}}</option>
                <option value="true">تعمل</option>
                <option value="false">ﻻ تعمل</option>
              </select>
            </div>
          </li>
          <li>
            <span>الراتب الأساسي</span>
            <div><input value="{{obj.salary}}" type="number" name="salary" class="input-field input-field-div1" readonly></div>
          </li>
          <li>
            <span>تاريخ التعيين</span>
            <div><input value="{{obj.jobStart}}" type="date" name="jobStart" class="input-field input-field-div1" readonly></div>
          </li>
          <li>
            <span>نوع الوظيفة</span>
            <div><input value="{{obj.jobType}}" type="text" name="jobType" class="input-field input-field-div1"></div>
          </li>
          <li class="full">
            <span>المسؤول المباشر</span>
            <div><input value="{{obj.supervisor}}" type="text" class="input-field input-field-div1" name="supervisor" readonly></div>
          </li>
          <li class="full">
            <span>الشهادات العلمية</span>
            {{#if obj.certificates.length}}
            <div>
              <span><a href="/download/{{obj.certificates.0.dataValues.link}}">{{obj.certificates.0.dataValues.name}} - إضغط
                  للتحميل
                </a></span>
            </div>
            {{/if}}
          </li>
        </ul>
        <input value="{{id}}" name="id" class="none">
      </form>
      <button class="editbtn">تعديل</button>
      <button class="btn-save none">حفظ</button>
    </div>
    <div class="singleBody first-box" id="bouns">
      <form class="form-update form" name="bouns" id="form-div2">
        <ul>
          <li>
            <span>المواصلات</span>
            <div><input name="transportation" value="{{obj.transportation}}" type="number" class="input-field input-field-div2"
                readonly></div>
          </li>
          <li>
            <span>بدل بنزين</span>
            <div><input value="{{obj.allowanceGasoline}}" name="allowanceGasoline" type="number" class="input-field input-field-div2"
                readonly></div>
          </li>
          <li>
            <span>بدل جوال</span>
            <div><input name="allowanceMobile" value="{{obj.allowanceMobile}}" type="number" class="input-field input-field-div2"
                readonly></div>
          </li>
          <li>
            <span>القدس وأخرى</span>
            <div><input name="allowanceJerusalem" value="{{obj.allowanceJerusalem}}" type="number" class="input-field input-field-div2"
                readonly></div>
          </li>
          <li>
            <span>بدل المهام</span>
            <div><input value="{{obj.allowanceWork}}" type="number" name="allowanceWork" class="input-field input-field-div2"
                readonly></div>
          </li>
        </ul>
        <ul>
          <li>
            <span>نقاط الموظف</span>
            <div><input value="{{obj.points}}" type="number" name="points" class="input-field input-field-div2" readonly></div>
          </li>
          <li>
            <span>العلاوة السنوية</span>
            <div><input value="{{obj.annualRate}}" type="number" name="annualRate" class="input-field input-field-div2" readonly></div>
          </li>
          <li>
            <span>علاوة زوجة</span>
            <div><span>{{objBouns.wifeAllowance}}</span></div>
          </li>
          <li>
            <span>علاوة الاولاد</span>
            <div><span>{{objBouns.childAllownace}}</span></div>
          </li>
          <li>
            <span>مجموع العلاوات</span>
            <div><span>{{objBouns.totalAllownace}}</span></div>
          </li>
        </ul>
        <input value="{{id}}" name="id" class="none">
      </form>
      <button class="editbtn">تعديل</button>
      <button class="btn-save none">حفظ</button>
    </div>
    <div class="singleBody first-box" id="deductions">
      <form class="form-update form" name="deductions" id="form-div3">
        <ul>
          <li>
            <span>تامين صحي</span>
            <div><input value="{{obj.deductionsHealthInsurance}}" type="number" name="deductionsHealthInsurance" class="input-field input-field-div3"
                readonly></div>
          </li>
          <li>
            <span>قروض وسلف</span>
            <div><input value="{{obj.deductionsLoans}}" name="deductionsLoans" type="number" class="input-field input-field-div3"
                readonly></div>
          </li>
          <li>
            <span>الصندوق الاجتماعي</span>
            <div><input value="{{obj.deductionsSocialFund}}" name="deductionsSocialFund" type="number" class="input-field input-field-div3"
                readonly></div>
          </li>
          <li>
            <span>الادخار</span>
            <div><span>{{objDeductions.savings}}</span></div>
          </li>
        </ul>
        <ul>
          <li class="full">
            <span>صندوق مشتريات </span>
            <div><span>{{objDeductions.purchaseBoxes}}</span></div>
          </li>
          <li class="pusrchaseBoxList">
            <ul>
              {{#if purchasesEmployeesResult.length}} {{#each purchasesEmployeesResult}}
              <li class="pusrchaseBoxLi">
                <span>- {{this.name}}</span>
                <div><input id="{{this.purchaseBox_id}}" value="{{this.payment}}" type="number" class="input-field pusrchaseBox"
                    readonly></div>
              </li>
              {{/each}} {{/if}}
            </ul>
          </li>
        </ul>
        <input value="{{id}}" name="id" class="none">
      </form>
      <button class="editbtn">تعديل</button>
      <button class="btn-save none">حفظ</button>
    </div>
    <div class="singleBody first-box" id="exemption">
      <form class="form-update form" name="exemption" id="form-div4">
        <ul>
          <li>
            <span>اعفاء سكن</span>
            <div><input value="{{obj.exemptionHouse}}" type="text" name="exemptionHouse" class="input-field input-field-div4"
                readonly></div>
          </li>
          <li>
            <span>اعفاء مقيم</span>
            <div><input value="{{obj.exemptionResident}}" type="text" name="exemptionResident" class="input-field input-field-div4"
                readonly></div>
          </li>
        </ul>
        <ul>
          <li>
            <span>اعفاء جامعي</span>
            <div><input value="{{obj.exemptionUniversity}}" type="text" name="exemptionUniversity" class="input-field input-field-div4"
                readonly></div>
          </li>
          <li>
            <span>اعفاء المواصلات</span>
            <div><span>{{objExemption.transportationsExemptions}}</span></div>
          </li>
        </ul>
        <input value="{{id}}" name="id" class="none">
      </form>
      <button class="editbtn">تعديل</button>
      <button class="btn-save none">حفظ</button>
    </div>
    <div class="singleBody" id="div5">
      <form action="/employeeReport" method="GET" target="_blank">
        <select name="date" id="monthValue" class="monthValue">
          {{#each employeeReports}}
          <option value="{{this.dataValues.date}}">{{this.dataValues.date}}</option>
          {{/each}}
        </select>
        <div class="report-secation">
          <div>
            <label>
              <input type="checkbox" class="checkBox" name="annualRate">العلاوة السنوية
            </label>
            <label>
              <input type="checkbox" class="checkBox" name="transportation"> المواصلات
            </label>
            <label>
              <input type="checkbox" class="checkBox" name="allowanceWork"> بدل مهام
            </label>
            <label>
              <input type="checkbox" class="checkBox" name="childAllownace"> علاوة ابناء
            </label>
            <label>
              <input type="checkbox" class="checkBox" name="wifeAllowance">علاوة زوجة
            </label>
            <label>
              <input type="checkbox" class="checkBox" name="allowanceGasoline"> بدل بنزين
            </label>
          </div>
          <div>
            <label>
              <input type="checkbox" class="checkBox" name="totalTaxes"> مجموع الضريبة
            </label>
            <label>
              <input type="checkbox" class="checkBox" name="deductionsHealthInsurance"> التأمين الصحي
            </label>
            <label>
              <input type="checkbox" class="checkBox" name="deductionsLoans"> قروض وسلف
            </label>
            <label>
              <input type="checkbox" class="checkBox" name="deductionsSocialFund"> الصندوق الاجتماعي
            </label>
            <label>
              <input type="checkbox" class="checkBox" name="savings">الادخار
            </label>
            <label>
              <input type="checkbox" class="checkBox" name="contributionOfEmployee">مساهمة الموظف في الضمان
            </label>
            <label>
              <input type="checkbox" class="checkBox" name="purchaseBoxes">صناديق مشتريات
            </label>
          </div>

        </div>
        <input value="{{id}}" name="id" class="none">
        <button id="{{id}}" class="btn-report">عرض</button>
      </form>
    </div>
  </div>
</div>
{{/if}}
</div>
</div>