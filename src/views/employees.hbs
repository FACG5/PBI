<h1 class='title'>عرض الموظفين</h1>
<hr>
<div class="box">
    <div class="add">
        <input id="search" type="text" placeholder="بحث حسب الاسم">
        <div>
        <button id="reset">تصفير المتغيرات الشهرية</button>
        <a href="/addEmployee"><button>إضافة موظف</button></a>
  </div>
            
        </div>
    <table>
        <thead>
            <tr>
                <th>الاسم الرباعي</th>
                <th>رقم الهوية</th>
                <th>المسمى الوظيفي</th>
                <th>الفئة</th>
                <th>حدث</th>
            </tr>
        </thead>
        <tbody>
            {{#each result}}
                <tr>
                    <td>{{dataValues.name}}</td>
                    <td>{{dataValues.idNumber}}</td>
                    <td>{{dataValues.jobTitle}}</td>
                    <td>{{dataValues.class}}</td>
                    <td><a href="employee/{{dataValues.id}}">تفاصيل</a></td>
                </tr>
        {{/each}}
        </tbody>
    </table>
</div>
